{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      // webpack.config 和 tsconfig.json 都要設定
      "~~components": ["./src/components"],
      "~~assets": ["./src/assets"]
    }
  }
}
